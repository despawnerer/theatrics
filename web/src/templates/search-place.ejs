<li class="search-result">
  <div class="search-result-image-container">
    <% if (place.data.first_image) { %>
    <a href="<%- url('place', {id: place.data.id}) %>">
      <img src="<%- place.data.first_image.thumbnails['144x96'] %>" class="search-result-image"/>
    </a>
    <% } %>
  </div>

  <div class="search-result-details">
    <div class="search-result-header">
      <a href="<%- url('place', {id: place.data.id}) %>">
        <h2 class="search-result-title"><%= place.getHighlightedName() %></h2>
      </a>
    </div>

    <% if (place.data.address) { %>
      <p class="meta">
        <%- place.data.address %>
      </p>
    <% } %>
  </div>
</li>